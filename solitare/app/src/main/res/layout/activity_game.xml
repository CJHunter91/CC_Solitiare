<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.solitare.GameActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/draw"
        android:layout_width="88dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:text="Deck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pile"
        android:layout_width="88dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/draw"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/draw"
        android:layout_toRightOf="@+id/draw"
        android:elevation="0dp"
        android:text="Pile"
        app:layout_constraintLeft_toRightOf="@+id/draw"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/stack_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pile"></LinearLayout>

</android.support.constraint.ConstraintLayout>
